{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block content %}
{# FORM FILTRE ON #}
    <div class="w-full p-4 bg-gray-200">
        <div class="flex items-center w-full gap-3">
            <div class="w-1/3">
                <input data-path="{{path('app_due_filtre')}}" placeholder="yyyy-mm-dd" class="w-full" type="text" value="{{date??""}}" name="" id="date-due">
            </div>

            <div class="w-1/3">
                <input data-path="{{path('app_due_filtre')}}" placeholder="entrer le client" class="w-full" type="text" value="{{client??""}}" name="" id="client">
            </div>	

            <div class="w-1/3">
                <a href="{{path('app_due_save')}}" class="float-right p-2 bg-yellow-400 rounded-md">nouveau</a>
            </div>			
        </div>
    </div>
{# FORM FILTRE OFF #}

{# TABLE ON  #}
    <div class="m-4 overflow-x-auto bg-white dark:bg-neutral-700">

        <!-- Table -->
        <table class="min-w-full text-xs text-left whitespace-nowrap">

            <!-- Table head -->
            <thead class="tracking-wider uppercase border-b-2 dark:border-neutral-600 bg-neutral-50 dark:bg-neutral-800">
                <tr>
                    <th scope="col" class="px-6 py-5">
                    nom complet
                    </th>            
                    <th scope="col" class="px-6 py-5">
                    email
                    </th>
                    <th scope="col" class="px-6 py-5">
                    telephone
                    </th>
                    <th scope="col" class="px-6 py-5">
                    roles
                    </th>
                    <th scope="col" class="px-6 py-5">
                    action            
                    </th>
                </tr>
            </thead>

            <!-- Table body -->
            <tbody>
                {% for item in pagination %}
                    <tr class="border-b dark:border-neutral-600">                        
                        <td class="px-6 py-5">{{item.nomComplet}}</td>
                        <td class="px-6 py-5">{{item.email}}</td>
                        <td class="px-6 py-5">{{item.telephone}}</td>                            
                        <td class="px-6 py-5">
                            {% for it in item.roles %}
                                {{it}},
                            {% endfor %}
                        </td>
                        <td class="px-6 py-5">
                            <a target="_blank" href="{{path('app_due_pay',{id:item.id})}}" class="p-2 bg-yellow-400 rounded">modifier</a>
                        </td>
                    </tr>                
                {% endfor %}
            </tbody>
    
        </table>

    </div>
{# TABLE OFF  #}

{# KPN PAGINATION ON  #}
	<div class="py-2 text-center">		
			{{ knp_pagination_render(pagination) }}		
	</div>
{# KPN PAGINATION OFF #}

{% endblock %}
