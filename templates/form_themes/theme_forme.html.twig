{% use 'tailwind_2_layout.html.twig' %} 

{%- block form_row -%} {%- set row_class
= row_class|default('my-3') -%}
{{- parent() -}}
{%- endblock form_row -%} 

{%- block widget_attributes -%} {%- set widget_class =
widget_class|default('peer block min-h-[auto] w-full rounded border-2
bg-transparent px-3 py-[0.32rem] leading-[1.6] outline-none transition-all
duration-200 ease-linear focus:placeholder:opacity-100 peer-focus:text-primary
data-[te-input-state-active]:placeholder:opacity-100
motion-reduce:transition-none dark:text-neutral-200
dark:placeholder:text-neutral-200 dark:peer-focus:text-primary
[&:not([data-te-input-placeholder-active])]:placeholder:opacity-0') -%} {%- set
widget_disabled_class = widget_disabled_class|default('my disabled widget
classes') -%} {%- set widget_errors_class = widget_errors_class|default('my
widget with error classes') -%}
{% set widget_min = 'min = 0' %}
{{- parent() -}}
{%- endblock widget_attributes -%} 

{%- block form_label -%} {%- set label_class
= label_class|default('') -%}
{{- parent() -}}
{%- endblock form_label -%} 

{%- block form_help -%} {%- set help_class =
help_class|default('my label classes') -%}
{{- parent() -}}
{%- endblock form_help -%}

{%- block form_errors -%} {%- set error_item_class =
error_item_class|default('text-red-500') -%}
{{- parent() -}}
{%- endblock form_errors -%}
